<?xml version="1.0" encoding="UTF-8" ?>
<!--  Horse mesh (~100K polygons, with normals)
 -->
<scene>
  <camera type="PerspectiveCamera">
    <viewPoint>4 6 8</viewPoint>
    <viewDir>-4 -6 -8</viewDir>
    <viewUp>0 1 0</viewUp>
    <projDistance>2</projDistance>
    <viewWidth>0.5</viewWidth>
    <viewHeight>0.5</viewHeight>
  </camera>
  <image>
    450 450
  </image>
  <shader name="ground" type="Lambertian">
    <diffuseColor>.05 1 0.2</diffuseColor>
  </shader>

  <shader name="ground1" type="Lambertian">
    <diffuseColor>.05 0.5 0.2</diffuseColor>
  </shader>

  <shader name="bunny" type="Phong">
    <diffuseColor>0.8 0.4 0.1</diffuseColor>
    <specularColor>0.9 0.7 0.3</specularColor>
  </shader>

  <surface type="Mesh">
    <shader ref="bunny" />
    <data>../../meshes/pyramid.obj</data>
  </surface>

  <surface type="Triangle">
    <minpt>0.5 0.5 0.5</minpt>
    <maxpt>0.8 0.8 0.8</maxpt>
    <shader ref="ground1" />
  </surface>
  
  <light type="DirectionalLight">
  	<direction>3 10 5</direction>
  	<intensity>.4 .4 .4</intensity>
  </light>
</scene>

